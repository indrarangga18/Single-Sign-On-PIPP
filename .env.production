# Application Configuration
APP_NAME="SSO PIPP"
APP_ENV=production
APP_KEY=base64:CHANGE_THIS_IN_PRODUCTION_32_CHAR_KEY
APP_DEBUG=false
APP_URL=https://sso.pipp.go.id

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=sso_pipp
DB_USERNAME=sso_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=sso_pipp_cache

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.pipp.go.id
SESSION_SECURE_COOKIES=true
SESSION_SAME_SITE=strict

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_PREFIX=sso_pipp_queue

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@pipp.go.id
MAIL_PASSWORD=CHANGE_THIS_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pipp.go.id
MAIL_FROM_NAME="SSO PIPP"

# JWT Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_64_CHARACTERS_LONG_FOR_SECURITY
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# SSO Configuration
SSO_CLIENT_ID=sso_pipp_client
SSO_CLIENT_SECRET=CHANGE_THIS_SSO_CLIENT_SECRET
SSO_REDIRECT_URI=https://sso.pipp.go.id/auth/sso/callback
SSO_ISSUER=https://sso.pipp.go.id
SSO_AUDIENCE=pipp_services

# Microservices Configuration
SAHBANDAR_SERVICE_URL=https://sahbandar.pipp.go.id
SAHBANDAR_SERVICE_KEY=CHANGE_THIS_SAHBANDAR_KEY
SAHBANDAR_SERVICE_TIMEOUT=30

SPB_SERVICE_URL=https://spb.pipp.go.id
SPB_SERVICE_KEY=CHANGE_THIS_SPB_KEY
SPB_SERVICE_TIMEOUT=30

SHTI_SERVICE_URL=https://shti.pipp.go.id
SHTI_SERVICE_KEY=CHANGE_THIS_SHTI_KEY
SHTI_SERVICE_TIMEOUT=30

EPIT_SERVICE_URL=https://epit.pipp.go.id
EPIT_SERVICE_KEY=CHANGE_THIS_EPIT_KEY
EPIT_SERVICE_TIMEOUT=30

# Security Configuration
BCRYPT_ROUNDS=12
HASH_DRIVER=bcrypt

# Rate Limiting
RATE_LIMIT_LOGIN=5,1
RATE_LIMIT_API=100,1
RATE_LIMIT_GENERAL=1000,1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://sahbandar.pipp.go.id,https://spb.pipp.go.id,https://shti.pipp.go.id,https://epit.pipp.go.id
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=86400
CORS_SUPPORTS_CREDENTIALS=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_NAMESPACE=sso_pipp
PROMETHEUS_METRICS_ROUTE_ENABLED=true

# Logging Channels
LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
LOG_SLACK_CHANNEL=#sso-alerts
LOG_SLACK_USERNAME=SSO-Bot
LOG_SLACK_EMOJI=:warning:

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_CACHE=true
HEALTH_CHECK_STORAGE=true
HEALTH_CHECK_MICROSERVICES=true

# File Storage Configuration
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK=local
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_VERIFY_PEER=true
SSL_VERIFY_HOST=true

# Timezone
APP_TIMEZONE=Asia/Jakarta

# Locale
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Maintenance Mode
MAINTENANCE_DRIVER=file
MAINTENANCE_STORE=redis

# Broadcasting (if needed)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Additional Security Headers
SECURE_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; frame-ancestors 'none';"

# API Documentation
API_DOCS_ENABLED=false
API_DOCS_ROUTE=api/documentation

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1000
SLOW_REQUEST_THRESHOLD=2000

# Audit Logging
AUDIT_ENABLED=true
AUDIT_DRIVER=database
AUDIT_RETENTION_DAYS=365